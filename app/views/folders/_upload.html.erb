<div class="modal-header-primary">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title"> <%= t(:send_doc)%> </h4>
</div>
<div class="modal-body format">
    <%= form_for(Document.new) do |f| %>
            <div class="field">
            <%= f.file_field :file, :autofocus => true, accept: 'text/plain,image/gif,image/jpeg,image/jpg,image/doc,image/docx'%>
            </div>
</div>
<div class="modal-footer">
    <!--Submit sign up form button-->
    <button type="button" class="btn btn-primary" data-dismiss="modal"> <%= t(:cancel)%> </button>
        <%= f.submit 'Enviar', class: 'btn btn-primary' %>
    <% end %> 
</div>



