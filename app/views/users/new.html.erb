<body class="login-bg">
    <div class="login-page">
      <div class="form">

        <!--Application logo-->
        <a href="/">
          <div id="logo-container">
            <%= image_tag('topbox_logo.png', :size => '198x67', :alt => 'logo') %>
          </div>
        </a>

        <!--Sign up form-->
        <%= form_for(@user) do |f| %>
            <%= f.text_field :first_name, :placeholder => 'Nome', :autofocus => true, :required => true, :class => "form-control" %>
            <%= f.text_field :last_name, :placeholder => 'Sobrenome', :required => true, :class => "form-control" %>
            <%= f.text_field :username, :placeholder => 'Nome de usuário', :minlength => 6, :required => true, :class => "form-control" %>
            <%= f.email_field :email, :placeholder => 'E-mail', :required => true, :class => "form-control" %>
            <%= f.password_field :password, :placeholder => 'Senha', :maxlength => 30, :minlength => 6, :required => true, :class => "form-control" %>
            <%= f.password_field :password_confirmation, :placeholder => 'Confirme senha', :maxlength => 30, :minlength => 6, :required => true, :class => "form-control" %>
            <!--Submit sign up form button-->
            <%= f.submit 'Criar conta', class: 'btn btn-login' %>

            <!--Flash messages-->
            <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %> fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <%= value %>
                </div>
            <% end %>

            <p class="message">Já possui uma conta? Por favor, <a href="/login">acesse-a</a></p>
        <% end %>

      </div>
    </div>
</body>
