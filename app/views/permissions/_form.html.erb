<body class="login-bg">
    <div class="login-page">
        <%= form_for(@permission) do |f| %>
          <center>
            <a class="subtitle"> Nome do documento: <h2> <%= get_current_document.name %></h2> </a>
            <br>
            <p><a class="subtitle">Compartilhar com: </a> <%= f.collection_select :user_id, all_users_except_current.order(:first_name), :id, :first_name %> </p>
            <%= f.check_box :write %>
            <%= f.label "Pode editar o arquivo"%>
            <br>
            <%= f.check_box :share %>
            <%= f.label "Pode Compartilhar o arquivo com outros" %>
          </center>
          <!--Submit sign up form button-->
          <br>
          <%= f.submit 'Salvar', class: 'btn btn-login' %>
        <% end %>
    </div>
</body>
<center>
  <br>
  <%= link_to 'Voltar', get_current_document %>
</center>