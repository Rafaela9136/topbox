<div class="modal-header-primary">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Novo Documento</h4>
</div>
<div class="modal-body format">
    <%= form_for(:document, :url => url_for(:controller => 'documents', :action => 'create')) do |f| %>
    	<a class="subtitle">Nome do documento</a>
        <%= f.text_field :name, :value => 'Documento sem tÃ­tulo', :autofocus => true, :required => true, :class => 'form-control' %>
        <br>
        <p><a class="subtitle">Tipo</a></p>

        <p><%= f.collection_select :extension, Document.extensions.keys.to_a, :to_s, :to_s, {:selected => Document.extensions.keys.to_a[0]}, {class: "select"}%></p>
