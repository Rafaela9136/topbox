<body>
	<script type="text/javascript">
		if(location.search.indexOf('reloaded=yes') < 0){
		var hash = window.location.hash;
		var loc = window.location.href.replace(hash, '');
		loc += (loc.indexOf('?') < 0? '?' : '&') + 'reloaded=yes';
		setTimeout(function(){window.location.href = loc + hash;}, 0);
		}
	</script>

	<br>
	<div class="content">
		<%= form_for @document do |d| %>
			Title: <%= d.text_field :name, :class => 'form-control' %>
	    	<br>

	    	<%= d.bootsy_area(:content, class: 'form-control doc-area', :rows => 18) %>

	  		<button href="/mytopbox" class="btn btn-primary pull-left">Cancel</button>
	  		<%= d.submit "Save changes", :class => 'btn btn-primary pull-right' %>
	  	<% end %>
	</div>
</body>