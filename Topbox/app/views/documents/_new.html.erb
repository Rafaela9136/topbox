

<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header modal-header-primary">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3><i class="glyphicon glyphicon-file" style="margin: 5px"></i> Novo documento </h3>
    </div>
    <div class="modal-body">

      <% @doc_new = Document.new %>

      <%= form_for (@doc_new) do |d| %>

          <%= d.text_field :name, :value => "Documento sem titulo", :autofocus => true, :class => 'form-control', :id => 'folder-name' %>
          <br>

          <!-- Conteudo -->
          <div class="form-group">
            <%= d.text_area(:content, class: "form-control", rows: "5") %>
          </div>

          </div>
          <div class="modal-footer">

          <%= d.submit 'Salvar', :class => "btn btn-primary" %>
      <% end %>

      <button type="button" class="btn btn-primary pull-left " data-dismiss="modal">Close</button>
    </div>
  </div>
</div>


