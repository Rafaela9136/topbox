<div class="login-page">
  <div class="form">
    <div id="logo-container">
        <%= image_tag('logo.png', :size => '230x67', :alt => 'logo') %>
    </div>
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group input-group">
        <span class="input-group-addon" style="background:#FFFFFF"><i class="glyphicon glyphicon-user" style="color:#045FB4"></i></span>
        <%= f.email_field :email, :placeholder => 'email', :required => true, :class => "form-control" %>         
      </div>
      <div class="form-group input-group">
        <span class="input-group-addon" style="background:#FFFFFF"><i class="glyphicon glyphicon-lock" style="color:#045FB4"></i></span>
        <%= f.password_field :password, :placeholder => 'password', :maxlength => 30, :minlength => 6, :required => true, :class => "form-control" %>     
      </div>
      <%= f.submit 'Login', :class => "btn btn-login" %>
      <p class="message">Not registered? <a href="signup">Create an account</a></p>
    <% end %>
  </div>
</div>