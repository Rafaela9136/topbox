<body class="login-bg">
<div class="login-page">
  <div class="form">

    <!--Application logo-->
    <div id="logo-container">
      <%= image_tag('topbox_logo.png', :size => '230x67', :alt => 'logo') %>
    </div>

    <!--Sign in form-->
    <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-group input-group">
          <span class="input-group-addon" style="background:#FFFFFF"><i class="glyphicon glyphicon-user" style="color:#045FB4"></i></span>
          <%= f.text_field :user, :placeholder => 'Nome de Usuário ou E-mail', :required => true, :class => 'form-control' %>
        </div>
        <div class="form-group input-group">
          <span class="input-group-addon" style="background:#FFFFFF"><i class="glyphicon glyphicon-lock" style="color:#045FB4"></i></span>
          <%= f.password_field :password, :placeholder => 'Senha', :maxlength => 30, :minlength => 6, :required => true, :class => 'form-control' %>
        </div>

        <!--Sign in button-->
        <%= f.submit 'Entrar', :class => 'btn btn-login' %>

        <!--Flash messages-->
        <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>"><strong><%= value %></strong></div>
        <% end %>

        <p class="message">Não é cadastrado? <a href="/signup">Crie uma conta</a></p>
    <% end %>
  </div>
</div>
</body>