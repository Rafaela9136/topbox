<body class="login-bg">
    <div class="login-page">
      <div class="form">

        <!--Sign up form-->
        <%= form_for(@folder) do |f| %>
            <%= f.text_field :name, :placeholder => @folder.name, :autofocus => true, :required => true, :class => "form-control" %>
            <%= f.collection_select :parent, user_folders, :id, :name %>

            <!--Submit sign up form button-->
            <%= f.submit 'Salvar', class: 'btn btn-login' %>

            <!--Flash messages-->
            <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %> fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <%= value %>
                </div>
            <% end %>
        <% end %>

      </div>
    </div>
</body>
<%= link_to 'Show', @folder %> |
<%= link_to 'Back', folders_path %>
