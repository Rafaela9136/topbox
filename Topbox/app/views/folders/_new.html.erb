<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header modal-header-primary">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3><i class="glyphicon glyphicon-folder-open" style="margin: 5px"></i> New folder</h3>
    </div>

    <div class="modal-body">

      <% @folder_new = Folder.new %>

      <%= form_for(folder) do |f| %>
          <label for="folder-name">Name: </label>
          <%= f.text_field :name, :required => true, :autofocus => true, :class => 'form-control', :id => 'folder-name'%>
          <br>
          <label for="folder-description">Description: </label>
          <%= f.text_area :description, :class => 'form-control', :id => 'folder-description'%>
          <br>
          <label for="folder-parent">Choose folder parent: </label>
          <%= f.collection_select :parent, Folder.order(:name),:id, :name, include_blank: false, :class => 'dropdown-menu', :id => 'folder-parent'%>
          <div class="modal-footer">
            <%= f.submit 'Create', :class => "btn btn-primary" %>
            <button type="button" class="btn btn-primary pull-left" data-dismiss="modal">Cancel</button>
          </div>
      <% end %>

    </div>

  </div>
</div>
